<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AchFerdi | Upload</title>

    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />

    <!-- CSS from public directory -->
    <link rel="stylesheet" href="./css/signup.css" />

    <!-- JavaScript Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <div class="container-sm box-form">
      <div class="text-center my-5">
        <h2>Unggah Resep</h2>
      </div>
      <div class="row justify-content-center m-5">
        <div class="col lg-6">
          <form
            action="/profile/:id/upload"
            method="post"
            enctype="multipart/form-data"
          >
            <div class="mb-3">
              <label for="formFile" class="form-label">Pilih foto resep</label>
              <input
                class="form-control"
                type="file"
                id="formFile"
                name="receiptImage"
              />
            </div>
            <div class="mb-3">
              <label for="inputTitle" class="form-label">Judul resep</label>
              <input
                type="text"
                class="form-control"
                id="inputTitle"
                name="receiptTitle"
              />
            </div>
            <div class="mb-3">
              <label for="inputDescription" class="form-label"
                >Deskripsi resep</label
              >
              <textarea
                class="form-control"
                id="inputDescription"
                name="receiptDesc"
                rows="3"
              ></textarea>
            </div>
            <div class="mb-3">
              <label for="inputBody" class="form-label">Cara Pembuatan</label>
              <textarea
                class="form-control"
                id="inputBody"
                name="receiptBody"
                rows="6"
              ></textarea>
            </div>
            <button type="reset" class="btn btn-secondary">Reset</button>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
